{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5">
        <h1>Project: <strong>{{ project.title }}</strong></h1>
        <p><strong>Number of Groups:</strong> {{ project.amountOfGroups }}</p>
        <p><strong>Students per Group:</strong> {{ project.maxStudentsPerGroup }}</p>

        <hr>
        <!-- Students Section -->
        <h3>Students</h3>
        {% if project.groups is not empty %}
            {% include 'student/student_list.html.twig' with { 'id' : project.id, 'students' : students } %}
            <a href="{{ path('app_student_new', {'projectId': project.id}) }}" class="btn btn-outline-primary">Add new student</a>
        {% else %}
            <p class="text-muted">No groups available for this project.</p>
        {% endif %}
        <hr>

        <!-- Groups Section -->
        <h3>Groups</h3>
        <div class="row">
            {% for group in project.groups %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-header">
                            {{ group.name }}
                        </div>
                        <div class="card-body">
                            <ul class="list-group mb-3" id="group-{{ group.id }}-students"
                                data-remove-url="{{ path('app_group_remove_student', {'groupId': group.id}) }}">
                                {% for student in group.students %}
                                    <li class="list-group-item d-flex justify-content-between"
                                        id="group-{{ group.id }}-student-{{ student.id }}">
                                        <span>{{ student.fullName }}</span>
                                        <button class="btn btn-outline-danger btn-sm remove-student-btn"
                                                data-student-id="{{ student.id }}"
                                                data-group-id="{{ group.id }}"
                                                aria-label="Remove student">
                                            &times;
                                        </button>
                                    </li>
                                {% else %}
                                    <li class="list-group-item text-muted">No students assigned yet.</li>
                                {% endfor %}
                            </ul>

                            {% if group.students|length < project.maxStudentsPerGroup %}
                                <form method="post" class="assign-student-form"
                                      data-group-id="{{ group.id }}"
                                      data-assign-url="{{ path('app_group_assign_student', {'groupId': group.id}) }}">
                                    <div class="input-group">
                                        <label>
                                            <select name="student" class="form-select student-select"
                                                    data-group-id="{{ group.id }}" required>
                                                <option value="">Assign student...</option>
                                                {% for student in students %}
                                                    {% if student.projectGroup is empty %}
                                                        <option value="{{ student.id }}">{{ student.fullName }}</option>
                                                    {% endif %}
                                                {% endfor %}
                                            </select>
                                        </label>
                                        <button type="submit" class="btn btn-success">Assign</button>
                                    </div>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-muted">No groups available.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
