{% extends 'base.html.twig' %}

{% block title %}Project list{% endblock %}

{% block body %}
    <h1 class="text-primary mb-4">Project list</h1>

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Amount of Groups</th>
            <th>Max Students Per Group</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.title }}</td>
                <td>{{ project.amountOfGroups }}</td>
                <td>{{ project.maxStudentsPerGroup }}</td>
                <td>
                    <a href="{{ path('app_project_status', {'id': project.id}) }}" class="btn btn-sm btn-info">Status</a>
                    <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                    {% include 'project/partial/_delete_button.html.twig' with { 'project' : project } %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_project_new') }}" class="btn btn-success mt-3">Create New</a>
{% endblock %}
